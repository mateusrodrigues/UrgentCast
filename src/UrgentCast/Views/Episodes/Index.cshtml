@model IEnumerable<UrgentCast.Models.Episode>
@{
    ViewData["Title"] = "Episodes";
}

<h2>Episodes</h2>
<a asp-controller="Manage" asp-action="Index" class="ui labeled icon primary button"><i class="arrow left icon"></i> Go Back</a>
<a asp-controller="Episodes" asp-action="Create" class="ui labeled icon positive button"><i class="add icon"></i> Add Episode</a>

<table class="ui celled padded table">
    <thead>
        <tr>
            <th class="single line">Episode ID</th>
            <th>Title</th>
            <th>Subtitle</th>
            <th>Date/Time</th>
            <th>Description</th>
            <th>Feed</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var episode in Model)
    {
        <tr>
            <td>
                <h2 class="ui center aligned header">@episode.EpisodeID</h2>
            </td>
            <td class="single line">
                @episode.Title
            </td>
            <td>
                @episode.Subtitle
            </td>
            <td class="right aligned">
                @episode.PublishedAt
            </td>
            <td>@episode.Description</td>
            <td>@episode.Feed.Title</td>
            <td>
                <a asp-controller="Episodes" asp-action="Delete" asp-route-id="@episode.EpisodeID" class="ui icon negative button">
                    <i class="trash icon"></i>
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>