@using Microsoft.AspNetCore.Identity
@using UrgentCast.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="right item">
@if (SignInManager.IsSignedIn(User))
{
    <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" class="ui inverted button"> Hello @UserManager.GetUserAsync(User).Result.Email!</a>
    <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="item">
        <button type="submit" class="ui inverted button">Log off</button>
    </form>
}
else
{
    <a asp-controller="Account" asp-action="Login" class="ui inverted button">Log in</a>
    <a asp-controller="Account" asp-action="Register" class="ui inverted button">Sign Up</a>
}
</div>